<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/b40"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/text"
            android:layout_marginTop="80dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Your Memory BOOK"
                android:lines="2"
                android:gravity="center"
                android:id="@+id/textT"
                android:textSize="30dp"
                android:layout_alignParentTop="true"
                android:textColor="#000783" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:background="@drawable/cloud1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/linerView"
            android:visibility="invisible"
            android:layout_gravity="center">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="#53dfdfdf">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:ems="10"
                android:background="@null"
                android:id="@+id/passEditText"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/savePasswordButton"
                android:src="@drawable/right_arrow1"
                android:layout_alignTop="@+id/editText"
                android:layout_alignRight="@+id/editText"
                android:layout_alignEnd="@+id/editText"
                android:onClick="savePassword"/>
        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

